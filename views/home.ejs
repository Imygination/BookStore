<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Hello, modularity!</title>
  </head>
  <body>

    
    <%- include('head/navbar'); %>
    <div class="container-fluid">
      <div class="px-lg-5">
        
        <!-- For demo purpose -->
    <div class="row py-5">
      <div class="col-lg-12 mx-auto">

      </div>
    </div>

    <!-- End -->

    <div class="row">
      <% products.forEach(e => { %>
        <!-- Gallery item -->
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
          <div class="bg-white rounded shadow-sm"><img src="<%= e.imageUrl %>" alt="FOTO BUKU" class="img-fluid card-img-top">
            <div class="p-4">
              <h5> <a href="#" class="text-dark"> <%= e.name  %> </a></h5>
              <p class="small text-muted mb-0"> <%= e.description %> </p>
              <h6> <a href="#" class="text-dark" style="text-decoration: none"> Stock <%= e.stock  %> </a></h6>
              <h5> <a href="#"  style="text-decoration: none"> <%= e.toIdr  %> </a></h5>
              <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                <% if(role === "seller"){ %>
                  <a href="/products/edit/<%= e.id %>"><button type="button" class="btn btn-info">Edit</button></a>
                  <a href="/products/delete/<%= e.id %>"><button type="button" class="btn btn-info">Delete</button></a>
                <% } else{ %>
                  <a href="/products/buy/<%= e.id %>"><button type="button" class="btn btn-danger">Buy</button></a>
                <% } %>
                <div class="badge badge-danger px-3 rounded-pill font-weight-normal">New</div>
              </div>
            </div>
          </div>
        </div>
        <!-- End -->
        <% }) %>
    </div>

  </div>
</div>


  </body>
</html>